<div class="container mt-5">
<%= render 'home/navbar' %>
		<div class="main-body mt-4">
			<div class="row">
				<div class="col-lg-4">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
							<% if @user_data.image.attached? %>
								<img src="<%= (url_for(@user_data.image)) %>" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
							<% else %>
								<img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
							<% end %>
								<div class="mt-3">
									<h4><%= @user_data.first_name %> <%= @user_data.last_name %></h4>
									<p class="text-secondary mb-1"><%= @user_data.email %></p>
									<p class="text-muted font-size-sm"><%= @user_data.mobile %></p>
									<p class="text-muted font-size-sm"><%= @user_data.date_of_birth %></p>
								</div>
							</div>							
						</div>
					</div>
				</div>
				<div class="col-lg-8">
                <%= form_with model: @user, local: true do |form| %>
					<div class="card">
						<div class="card-body">
                        <div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Profile Image</h6>
								</div>
								<div class="col-sm-9 text-secondary">
                                    <label class="ml-3 w-75 form-control custom-file-label" for="validatedCustomFile">Choose file...</label>
                                    <%= form.file_field :image ,:class => "form-control border px-4 custom-file-input" %>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">First Name</h6>
								</div>
								<div class="col-sm-9 text-secondary">
                                    <%= form.text_field :first_name , :class => "form-control" %>
								</div>
							</div>
                            <div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Last Name</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<%= form.text_field :last_name , :class => "form-control"  %>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Last Name</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<%= form.text_field :email , :class => "form-control"  %>
								</div>
							</div>
                            <div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Date of Birth</h6>
								</div>
								<div class="col-sm-9 text-secondary">
                                    <%= form.date_select :date_of_birth, :class => "form-control w-100 border" %>
								</div>
							</div>
                    
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Phone</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<%= form.number_field :mobile , :class => "form-control"  %>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
                                <%= form.submit "Save Details", :class => "btn btn-primary px-4"%>
								</div>
							</div>
						</div>
					</div>
				<% end %>
				</div>
			</div>
		</div>
	</div>


    <script type="text/javascript">
    $('#datepicker').datepicker({
        weekStart: 1,
        daysOfWeekHighlighted: "6,0",
        autoclose: true,
        todayHighlight: true,
    });
    $('#datepicker').datepicker("setDate", new Date());
</script>