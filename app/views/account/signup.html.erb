<div class="container h-100 mt-5">
    		<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-7 mx-auto d-table h-100">
					<div class=" align-middle">
						<div class="card">
							<div class="">
								<div class="m-sm-4">
									<div class="text-center mt-4">
                                        <h1 class="h2">New User!</h1>
                                        <p class="lead">
                                            Create an Account to continue
                                        </p>
									
                                    </div>
									<%= form_with model: @user, local: true do |form| %>
										<% if @new_user %>
											<% @new_user.errors.full_messages.each do |message| %>
											<div class="alert alert-warning alert-dismissible fade show" role="alert">
												<%= message %>
												<button type="button" class="close" data-dismiss="alert" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
												</div>
											<% end %>
										<% end %>
									
									<fieldset class="scheduler-border">
                                    <legend class="scheduler-border" style="font-size:17px;">Create New Account</legend>
										<div class="form-group">
											<label>First Name</label>
											<%= form.text_field :first_name , :class => "form-control"%>
										</div>
                                    	<div class="form-group">
											<label>Last Name</label>
											<%= form.text_field :last_name , :class => "form-control"%>
										</div>
										<div class="form-group">
											<label>Email</label>
											<%= form.text_field :email , :class => "form-control"%>
										</div>
										<div class="form-group">
											<label>Phone No</label>
											<%= form.number_field :mobile , :class => "form-control"%>
										</div>
										<div class="form-group">
											<label>Date Of Birth</label><br>
											<%= form.date_select :date_of_birth, :class => "form-control w-100 border" %>
										</div>
										<div class="form-group">
											<label>Password</label>
											<%= form.password_field :hashed_password , :class => "form-control"%>
										</div>
										<div class="form-group">
											<label>Confirm Password</label>
											<%= form.password_field :password , :class => "form-control"%>
										</div>
										<div class="mt-2 mb-3">
											<%= form.submit "Sign Up", :class => "btn btn-primary px-4"%>
                                            <button href="" class="btn btn-danger">Cancel</button>
											<!-- <button type="submit" class="btn btn-lg btn-primary">Sign in</button> -->
										</div>
                                        <small style="font-size:15px;">
                                            Already Have an Account?
                                            <a href="<%= account_login_path %>">Sign In</a>
                                        </small><br>
                                        
                                    <fieldset>
									<% end %>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>