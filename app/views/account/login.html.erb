<div class="container h-100 mt-5">
    		<div class="row h-100" id="back">
				<div class="col-sm-10 col-md-8 col-lg-7 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">
						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									<div class="text-center mt-4">
                                        <h1 class="h2">Welcome back!</h1>
                                        <p class="lead">
                                            Sign in to your account to continue
                                        </p>
										<% if notice %>
											<div class="alert alert-warning alert-dismissible fade show" role="alert">
												<%= notice %>
												<button type="button" class="close" data-dismiss="alert" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
										<% end %>
                                    </div>
									<%= form_with model: @user, local: true do |form| %>
										<% if @new_user %>
											<% @new_user.errors.full_messages.each do |message| %>
											<div class="alert alert-warning alert-dismissible fade show" role="alert">
												<%= message %>
												<button type="button" class="close" data-dismiss="alert" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
											<% end %>
										<% end %>
									
									<fieldset class="scheduler-border">
                                    <legend class="scheduler-border" style="font-size:17px;">Create New Account</legend>
										<div class="form-group">
											<label>Email</label>
											<%= form.text_field :email , :class => "form-control"%>
										</div>
									
										<div class="form-group">
											<label>Password</label>
											<%= form.password_field :password , :class => "form-control"%>
										</div>
										
										<div class="mt-2 mb-3">
											<%= form.submit "Sign In", :class => "btn btn-primary px-4"%>
                                            <button href="" class="btn btn-danger">Cancel</button>
											<!-- <button type="submit" class="btn btn-lg btn-primary">Sign in</button> -->
										</div>
                                        <small style="font-size:15px;">
                                            New User?
                                            <a href="<%= account_signup_path %>">Sign Up Now!</a>
                                        </small><br>
                                        <small style="font-size:15px;">
                                            <a href="<%= password_forget_password_path %>">Forgot Password?</a>
                                        </small>
                                        
                                    <fieldset>
									<% end %>
									
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>