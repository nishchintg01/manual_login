<div class="container h-100 mt-5">
    		<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-7 mx-auto d-table h-100">
					<div class=" align-middle">
						<div class="card">
							<div class="">
								<div class="m-sm-4">
									<div class="text-center mt-4">
                                        <h1 class="h2">Can't Access Your Account?</h1>
                                        <p class="lead">
                                            Enter your Email to continue
                                        </p>
										<% if notice %>
											<div class="alert alert-warning alert-dismissible fade show" role="alert">
												<%= notice %>
												<button type="button" class="close" data-dismiss="alert" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
										<% end %>
                                    </div>
									<%= form_with model: @user, local: true do |form| %>
										<% if @new_user %>
											<% @new_user.errors.full_messages.each do |message| %>
											<div class="alert alert-warning alert-dismissible fade show" role="alert">
												<%= message %>
												<button type="button" class="close" data-dismiss="alert" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
											<% end %>
										<% end %>
									
									<fieldset class="scheduler-border">
                                    <legend class="scheduler-border" style="font-size:17px;">Forgot Your Password</legend>
										<div class="form-group">
											<label>Email</label>
											<%= form.text_field :email , :class => "form-control"%>
										</div>
									
									
										
										<div class="mt-2 mb-3">
											<%= form.submit "Send Reset link", :class => "btn btn-primary px-4"%>
                                            <a href="<%= account_login_path %>" class="btn btn-danger">Cancel</a>
											<!-- <button type="submit" class="btn btn-lg btn-primary">Sign in</button> -->
										</div>                                   
                                        
                                    <fieldset>
									<% end %>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>