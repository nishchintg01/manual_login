<div class="container h-100 mt-5">
    		<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-7 mx-auto d-table h-100">
					<div class=" align-middle">
						<div class="card">
							<div class="">
								<div class="m-sm-4">
									<div class="text-center mt-4">
                                        <h1 class="h2">Create New Password Here!</h1>
                                        <p class="lead">
                                        
                                        </p>
										<% if notice %>
											<div class="alert alert-warning alert-dismissible fade show" role="alert">
												<%= notice %>
												<button type="button" class="close" data-dismiss="alert" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
										<% end %>
                                    </div>
									<%= form_with do |form| %>
									
									<fieldset class="scheduler-border">
                                    <legend class="scheduler-border" style="font-size:17px;">Reset Your Password</legend>
										<div class="form-group">
											<label>Password</label>
											<%= form.password_field :password , :class => "form-control"%>
										</div>
										<div class="form-group">
											<label>Confirm Password</label>
											<%= form.password_field :confirm_password , :class => "form-control"%>
										</div>										
										<div class="mt-2 mb-3">
											<%= form.submit "Save Password", :class => "btn btn-primary px-4"%>
                                            <a href="<%= account_login_path %>" class="btn btn-danger">Cancel</a>
											<!-- <button type="submit" class="btn btn-lg btn-primary">Sign in</button> -->
										</div>                                   
                                        
                                    <fieldset>
									<% end %>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>